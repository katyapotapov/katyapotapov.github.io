body {
  margin: 0;
  background-color: grey;
  background-image: url("../data/mountain-sky.JPG");
  background-size: cover;
  background-attachment: fixed;
}

.wrapper {
  position: relative;
  text-align: center;
}

.wrapper::before {
  content: '';
  display: inline-block;
  height: 100vh;
  vertical-align: middle;
}

.main {
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 20px;
  color: #444444;
  width: 90%;
  display: inline-block;
  vertical-align: middle;
  font-family: 'Josefin Sans', sans-serif;
}

@media screen and (min-width: 700px) {
  body .main {
    width: 630px;
  }

  body .name {
    font-size: 50px;
  }
}

.main--content {
  width: 80%;
  display: inline-block;
  padding: 1em;
}

header.global {
  margin-bottom: 1em;
  width: 80%;
  display: inline-block;
}

header.subpage {
  font-size: 1em;
  margin-bottom: 1em;
  display: inline-block;
}

header.subpage a:hover {
  background-color: transparent;
}

.name {
  font-size: 7vw;
}

.link-bar {
  border-left: none;
  border-right: none;
  font-size: 1em;
}

ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

/*li {
  background-color: white;
  background-color: rgba(255, 255, 255, 50);
}*/

li a {
  display: block;
}

@keyframes fade-in {
  from {
    opacity: 0;
    /*background-color: white;
    color: #000;
    color: rgba(0, 0, 0, 0);*/
  }
  to {
    background-color: #444444;
    color: white;
  }
}

li:hover {
    background-color: #444444;
    color: white;
    animation: fade-in 0.15s 1;
}

a {
  text-decoration: none;
  color: inherit;
}

a.selected {
  background-color: #444444;
  color: white;
  border-radius: inherit;
}

a.selected:hover {
  background-color: white;
  color: #444444;
  animation: fade-in 0.1s 1 reverse;
}

.link-bar li {
  display: inline-block;
  text-align: center;
  width: 25%;
  position: relative;
}

.link-bar--text {
  position: absolute;
  top: 25%;
  bottom: 0;
  left: 0;
  right: 0;
  visibility: hidden;
}

li a:hover .link-bar--text {
  visibility: visible;
}

.front-nav {
  display: flex;
  font-size: 1.5em;
}

.front-nav li {
  margin-bottom: 1em;
  border-radius: 10px;
  padding: 0.15em 0.3em;
  text-align: left;
}

img.front-nav {
  height: 40px;
}


nav {
    width: 100%;
}


nav li {
  display: inline-block;
  width: 25%;
  position: relative;
}

.rounded-bar li:first-child {
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
}

.rounded-bar li:last-child {
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}

h1 {
  font-size: 2em;
  margin: 1em 0;
}

.content {
  margin: 1em 0;
  background-color: white;
  border-radius: 20px;
  padding: 1em;
}

#description {
  padding-top: 5em;
  padding-left: 1em;
  padding-right: 1em;
  padding-bottom: 2em;
  text-align: center;
}

img {
  display: block;
  margin: 0.25em auto;
}

img.front-nav {
  height: 40px;
}

.bottom-button {
  margin-top: 2em;
  width: 100%;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  width: 100%;
}

.grid-item {
  display: flex;
  margin: auto;
  padding: 2.5%;
  width: 100%;
}

.grid-content {
  margin: auto;
}

@media all and (min-width: 400px) {
  .grid-item {
    padding: 40px;
    width: 40%;
  }
}
